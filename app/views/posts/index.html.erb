<%- @posts.each do |post|%>
    <%= link_to post.content, post_path(post) %>
    <%= link_to 'Edytuj', edit_post_path(post) %>
    <%= link_to 'Delete', post_path(post), method: :delete, remote: :true %>
    <br>
    <hr/>
<% end %>

<strong>Tagi</strong>
<br>
<hr/>
<hr/>
<% @posts.includes(:tag).each do |post| %> 
    <%= post.tag&.name %>
    <br>
<% end %>

